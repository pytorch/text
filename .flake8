[flake8]
ignore =
    E401,E402,E501,E722,W503,W504,F821,B006,B007,B008,B009,
    # https://github.com/PyCQA/pycodestyle/issues/373
    E203
select =
    B,C,E,F,P,T4,W,B9,
    # Missing argument descriptions in the docstring
    D417,
    # TorchFix
    TOR0,TOR1,TOR2
max-line-length = 120
exclude = docs/source,third_party
